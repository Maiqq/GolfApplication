<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="667dp"
            android:layout_height="323dp"
            android:weightSum="2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="7dp"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="match_parent" android:weightSum="1">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp" app:srcCompat="@drawable/cardigan"
                    android:layout_weight="0.9"
                    android:id="@+id/imageView"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">
                <TextView
                        android:text="@string/breed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/breedTextView" android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:text="@string/size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/sizeTextView" android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="match_parent" android:layout_margin="5dp"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
            <TextView
                    android:text="@string/dog_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/dogInfoTextView"
                    android:scrollbars="vertical" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent" android:gravity="center_vertical">
            <TextView
                    android:text="@string/_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/oneTextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:onClick="numberClicked"/>
            <TextView
                    android:text="@string/_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/twoTextView" android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:onClick="numberClicked"/>
            <TextView
                    android:text="@string/_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/threeTextView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center"
                    android:onClick="numberClicked"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>