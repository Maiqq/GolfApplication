<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <Button
            android:text="Start a new workout"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/btn_copyWorkout"
            app:layout_constraintEnd_toEndOf="@+id/btn_copyWorkout"
            android:id="@+id/btn_addWorkout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_copyWorkout"/>
    <Button
            android:text="Copy previous workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_copyWorkout"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Workout log Empty"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/btn_addWorkout"/>
</androidx.constraintlayout.widget.ConstraintLayout>